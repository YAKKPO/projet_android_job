<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/blue</item>
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/teal_200</item>
        <item name="cornerRadius">8dp</item>
        <item name="background">@android:drawable/ic_media_play</item>
        <!-- 根据需要自定义其他属性 -->
    </style>
    <style name="button_rechercher" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="MyButtonStyle.moncompte" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="rippleColor">@color/teal_200</item>
        <item name="cornerRadius">8dp</item>
        <item name="background">@android:drawable/ic_media_play</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Widget.CalendarView.Custom" parent="android:Widget.CalendarView">

    </style>

    <style name="DateTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/purple_200</item>
    </style>

    <style name="MyLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">#2196F3</item>
    </style>

    <style name="title_tv" parent="Widget.AppCompat.TextView">
        <item name="android:color">@color/purple_200</item>
        <item name="android:textSize">16dp</item>
    </style>

</resources>
