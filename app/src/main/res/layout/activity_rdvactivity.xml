<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RDVActivity">

    <SearchView
        android:id="@+id/sv_rechercher_rdv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="48dp" />

    <Button
        android:id="@+id/button_recherche"
        style="@style/button_rechercher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_Rechercher"
        android:text="@string/app_Rechercher"
        android:layout_marginBottom="5dp"
        tools:ignore="VisualLintButtonSize" />

    <ListView
        android:id="@+id/list_res"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>