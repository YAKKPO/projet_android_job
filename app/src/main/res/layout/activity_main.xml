<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessParent">


            <LinearLayout
                android:id="@+id/main_p1"
                android:layout_width="match_parent"
                android:layout_height="213dp"
                android:background="@color/blue"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/main_title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adamina"
                    android:paddingTop="25dp"
                    android:paddingBottom="10dp"
                    android:text="@string/app_title1"

                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/main_title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adamina"
                    android:text="@string/app_title2"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_rechercher"
                    style="@style/MyButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="@string/app_Rechercher"
                    app:icon="@android:drawable/ic_menu_search"
                    app:iconGravity="textEnd"
                    app:iconPadding="0dp"
                    app:iconSize="50dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_p2_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_p2_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/purple_500"
                    android:fontFamily="@font/adamina"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/app_Categorie_medecin"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_p2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/purple_500"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_dentiste"
                    style="@style/MyButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:text="dentiste"
                    app:icon="@drawable/baseline_wash_24"
                    app:iconGravity="top"
                    app:iconPadding="0dp"
                    app:iconSize="65dp"
                    tools:ignore="HardcodedText,VisualLintButtonSize" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_medecin"
                    style="@style/MyButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:text="medecin"
                    app:icon="@drawable/baseline_local_hospital_24"
                    app:iconGravity="top"
                    app:iconPadding="0dp"
                    app:iconSize="65dp"
                    tools:ignore="HardcodedText,VisualLintButtonSize" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_psychologie"
                    style="@style/MyButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:text="Psychologie"
                    app:icon="@drawable/baseline_emergency_24"
                    app:iconGravity="top"
                    app:iconPadding="0dp"
                    app:iconSize="65dp"
                    tools:ignore="HardcodedText,TextSizeCheck,VisualLintButtonSize" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_p3_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_p3_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blue"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:shadowColor="@color/blue"
                    android:text="@string/app_historique"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ListView
                    android:id="@+id/list_historique"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="NestedScrolling" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_p4_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >


            </LinearLayout>



        </LinearLayout>



    </FrameLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu"
        tools:ignore="VisualLintBounds" />


</androidx.drawerlayout.widget.DrawerLayout>